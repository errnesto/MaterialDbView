.tooltip
  text-align       left
  position         absolute
  bottom           15px
  left             4px
  width            200px
  background-color inherit
  padding          10px
  z-index          10
  font-family      sans-serif
  font-size        12px
  box-shadow       -2px 6px 24px 0 #000
  &:before
    content            ''
    position           absolute
    bottom             -10px
    left               -2px
    width              0 
    height             0
    border-top         10px solid transparent
    border-bottom      10px solid transparent 
    border-right       10px solid
    border-right-color inherit
    transform          rotate(45deg)
  
  .dot-name
    font-size  14px
    margin     3px 0 5px
  
  .description
    margin-top 5px
    
  p 
    margin 0
    
  a
    color #fff
